@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}


<h1>Restaurant</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">

            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-light">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>

</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                @restaurant.Name
            </td>
            <td>
                @restaurant.Location
            </td>
            <td>
                @restaurant.Cuisine
            </td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">Detail
                    <i class="btn-secondary">
                    </i>
                </a>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">Edit
                    <i class="btn-secondary btn_info">
                    </i>
                </a>
            </td>
        </tr>
    }
</table>
<a asp-page=".\Edit" class="button btn-primary">Add new</a>
@section footer {

<div>@Model.Message</div>
}