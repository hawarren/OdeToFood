@using OdeToFood.Core
@model Restaurant

<div class="card card-group">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg"
            asp-page="./Detail"
            asp-route-restaurantId="@Model.Id">
                <i class="glyphicon glyphicon-zoomin"></i>
        </a>
        <a class="btn btn-dark"
            asp-page="./Edit"
            asp-route-restaurantId="@Model.Id">
                <i class="glyphicon glyphicon-zoomin"></i>
        </a>
        <a class="btn btn-danger"
            asp-page="./Delete"
            asp-route-restaurantId="@Model.Id">
                <i class="glyphicon glyphicon-zoomin"></i>
        </a>
    </div>






</div>